<!doctype html>
<html lang="en">

<head>
    <title>@ViewBag.Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link href="~/Plugins/css/style.css" rel="stylesheet">
    <link href="~/Plugins/css/subTheme.css" rel="stylesheet">
    <link href="~/Plugins/fonts/fontawesome-free-6.4.2-web/css/all.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Plugins/ckfinder/ckfinder.js"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navb">
            <div class="container-fluid">
                <ul class="navbar-nav ms-auto " style="padding-right: 200px;">
                    <!-- Avatar -->
                    <li class="nav-item dropdown ">
                        <a class="nav-link dropdown-toggle d-flex align-items-center " href="#" id="navbarDropdownMenuLink"
                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <h5 class="m-3" style="color:  #0F2C59;" id="usernameLayout">@Session["username"]</h5>
                            <img id="avatarImg" src="~/Plugins/localImgs/Avt.png" style="background-color: white; border: 1px solid grey;"
                                 class="rounded-circle" height="50" width="50" alt="Portrait of a Woman" loading="lazy" />

                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li>
                                <a class="dropdown-item" href="userPage">
                                    <i class="fa-solid fa-user p-2"></i>
                                    My profile
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="myWordList">
                                    <i class="fa-solid fa-folder p-2"></i>
                                    Word list
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="signIn">
                                    <i class="fa-solid fa-right-from-bracket p-2"></i>
                                    Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer class=" text-center mt-5 ">
        <!-- Grid container -->
        <div class="container p-4 " style="border-top: 1px solid;">
            <!-- Section: Social media -->
            <section class="mb-4">
                <a class="btn btn-outline-dark btn-floating m-1" href="#!" role="button"><i class="fab fa-facebook-f"></i></a>
                <a class="btn btn-outline-dark btn-floating m-1" href="#!" role="button"><i class="fab fa-twitter"></i></a>
                <a class="btn btn-outline-dark btn-floating m-1" href="#!" role="button"><i class="fab fa-google"></i></a>
                <a class="btn btn-outline-dark btn-floating m-1" href="#!" role="button"><i class="fab fa-instagram"></i></a>
            </section>
            <!-- Section: Social media -->

            <section class="mb-4">
                <h6>
                    Feel free to reach out to us with any questions, concerns, or feedback. We value your input and strive to
                    provide the best learning experience possible.
                </h6>
            </section>

        </div>
    </footer>

    
    <!-- Bootstrap JavaScript Libraries -->

    <script src="~/Scripts/popper.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
            integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
    </script>
</body>

</html>

<script>
    var _username = document.getElementById("usernameLayout").innerHTML;
    data = {
        userName: _username
    }

    $.ajax({
        url: '/Home/GetUserInforByUserName',
        type: 'POST',
        data: data,
        success: function (result) {
            if (result.avatar == "") {
                document.getElementById("avatarImg").src = "~/Plugins/localImgs/Avt.png";
            }
            else {
                document.getElementById("avatarImg").src = result.avatar;
            }

        },
        error: function (error) {
            console.log('Error:', error);
        }
    });
</script>