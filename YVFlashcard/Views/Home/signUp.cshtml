@{
    ViewBag.Title = "signUp";
    Layout = null;
 }

<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link href="~/Plugins/css/style.css" rel="stylesheet">
    <link href="~/Plugins/css/authentication.css" rel="stylesheet">
    <link href="~/Plugins/fonts/fontawesome-free-6.4.2-web/css/all.min.css" rel="stylesheet">

</head>

<body>
    <header>
        <!-- place navbar here -->
    </header>
    <main>

        <section class="h-100 " style="background-color:#F5ECE3;">

            <div class="container py-md-3 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-8 col-xl-6">
                        <div class="card rounded-5" style="width: 450px; height: 775px; margin:auto;">
                            <img src="~/Plugins/localImgs/SignUp_bg.png"
                                 class=" w-100" style=" height: 280px; border-radius: 20px 20px 0px 0px;"
                                 alt="Sample photo">
                            <div class="card-body p-4 p-md-5" style="background-color:white; border-radius: 20px;">

                                <h1 style="text-align: center; margin-bottom: 30px; font-family: 'Yeseva One';">Create your account</h1>
                                <form class="px-md-2">

                                    <div class="form-outline mb-4">
                                        <input type="email" id="email_SignUp" class="form-control" placeholder="Email" />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="text" id="userName_SignUp" class="form-control" placeholder="Username" />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="password" id="pass_SignUp" class="form-control" placeholder="Password" />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="password" id="conf_pass_SignUp" class="form-control" placeholder="Confirm password" />
                                    </div>

                                    <button type="button" class="btn btn-outline-success ellipse-btn" id="sign_up-btn" onclick="signUp()">SIGN UP</button>

                                    <p style="text-align: center;">Already have an account? <a href="@Url.Action("signIn", "Home" )" class="link">Sign In here</a></p>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="~/Plugins/js/authentication.js"></script>
    <script src="~/Scripts/popper.min.js"
            integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
    </script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
            integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
    </script>
</body>

</html>