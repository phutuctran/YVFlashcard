@{
    ViewBag.Title = "Home Page";
    Layout = null;
    string username = Session["username"] != null ? Session["username"].ToString() : "";
    bool needTestFirst = true;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">
    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Poppins:400,700&display=swap" rel="stylesheet">
    <!-- font awsome -->
    <link href="~/Plugins/fonts/fontawesome-free-6.4.2-web/css/all.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Plugins/css/style.css " rel="stylesheet">
    <link href="~/Plugins/css/index.css " rel="stylesheet">
    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Poppins:400,700&display=swap" rel="stylesheet">
    <input hidden value="@username" id="currentUsername" />
    <input hidden value="@needTestFirst" id="needTestFirst" />
</head>

<body>

    <div class="hero_area ">
        <!-- header section  -->
        <header class="header_section">
            <div class="container-flui" style="height: 80px;">
                <nav class="navbar ">
                    <a class="navbar-brand" href="index.html">
                        <img src="./assets/imgs/logo.png" id="logo" alt="">
                    </a>
                    @{
                        if (username != "")
                        {

                                <div class="d-flex" onclick="NavToUserPage()">
                                    <h5 class="mt-3 me-1" style="color:#0F2C59;">@username</h5>
                                    <img id="avt-img" src="~/Plugins/localImgs/Avt.png" style="background-color: white; border: 1px solid grey;"
                                         class="rounded-circle me-5" height="80" width="80" alt="Portrait of a Woman"
                                         loading="lazy" />

                                    @if (needTestFirst)
                                    {

                                    }

                                </div>
                                }
                                else
                                {
                                <div>
                                    <a id="sign_in-link" href="@Url.Action("signIn", "Home")">Sign In</a>
                                    <a id="sign_up-link" href="@Url.Action("signUp", "Home")">Sign Up</a>
                                </div>
                                }
                                }

                        </nav>
                    </div>
                </header>

                <!--intro section -->

                <div class="container">
                    <!-- Content -->
                    <div class="row intro_section g-5 ">
                        <div class="col-6" id="intro_content">
                            <h1 class="web_title" id="web_name">
                                English Vocabulary
                                Flashcard
                            </h1>
                            <h2>
                                /ˈflæʃ ˌkɑːd/
                            </h2>
                            <p style="font-size:18px; margin-top:25px; width: 450px; line-height: 2.0;">
                                Welcome to our English learning website! Dive into the world of English with our fun and
                                interactive flashcards.
                                Learning has never been this easy and enjoyable.
                            </p>
                        </div>

                        <!-- Slider -->
                        <div class="col-6 " id="slider">
                            <div id="carouselExampleInterval" class="carousel_slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active" data-bs-interval="2000">
                                        <img src="./assets/imgs/Slider1.png" class="d-block w-100 h-100" alt=""
                                             style="padding-left: 100px;">
                                    </div>
                                    <div class="carousel-item" data-bs-interval="2000">
                                        <img src="./assets/imgs/Slider2.png " class="d-block w-100 h-100" alt=""
                                             style="padding-left: 100px;">
                                    </div>
                                    <div class="carousel-item" data-bs-interval="2000">
                                        <img src="./assets/imgs/Slider3.png" class="d-block w-100 h-100" alt=""
                                             style="padding-left: 100px;">
                                    </div>
                                    <div class="carousel-item" data-bs-interval="2000">
                                        <img src="./assets/imgs/Slider4.png" class="d-block w-100 h-100" alt=""
                                             style="padding-left: 100px;">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- scroll dowwn btn -->
                        <div class="row ">
                            <button type="button" id="scroll_down-btn" class="btn btn-outline-success rounded-btn"
                                    onclick="scrollToStartSection()">
                                <i class="fa-solid fa-chevron-down"></i>

                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- start section -->
            <div id="start_section">

                <h2 class="highlight-font" id="start-text">
                    Where do I get started?
                </h2>
                <div class="user_option" style="margin-left: 32%">
                    <h5 id="user_option-text">
                        Choose one of the categories below or create your own
                    </h5>
                    <button type="button" id="user_create-btn" class="btn btn-outline-success rounded-btn ">
                        <i class="fa-sharp fa-solid fa-plus"></i>
                    </button>
                </div>

                <div class="container">
                    <!-- system option -->

                    <div class="row" style="padding: 0px 100px 0px 200px;">

                        <div id="myBtnContainer">
                            <button type="button" style="margin-right: 10px;" id="option1"
                                    class="btn btn-outline-success ellipse-btn system_option active "
                                    onclick="filterSelection('all')">
                                ALL
                            </button>

                            <button type="button" style="margin-right: 10px;" id="option3"
                                    onclick="filterSelection('specialised')"
                                    class="btn btn-outline-success ellipse-btn system_option ">
                                SPECIALISED VOCABULARY
                            </button>

                            <button type="button" style="margin-right: 10px;" id="option2"
                                    class="btn btn-outline-success ellipse-btn system_option "
                                    onclick="filterSelection('CEFR')">
                                CEFR LEVELS
                            </button>

                            <button type="button" style="margin-right: 10px;" id="option4" style="margin-right: 0px;"
                                    class="btn btn-outline-success ellipse-btn system_option" onclick="filterSelection('idioms')">
                                ENGLISH IDIOMS
                            </button>

                        </div>
                    </div>

                    <!-- levels -->
                    <div class="row level_rows" id="all-cards-container">


                        <!-- <div class="col-3 specialised">
                            <div class="card card_theme" id="levelC1">
                                <div class="outer_card">
                                    <div class="pics">
                                        <img src="./assets/imgs/tt.png" class="outer_img">
                                        <video src="./assets/imgs/G.webm" autoplay="autoplay" muted loop class="inner_img">
                                        </video>
                                        <h class="inner_txt">32 lessons - 618 words</h>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">Technology</h5>
                                        <p class="card-text">You can write very acceptable texts about most subjects, and talk
                                            about variety of topics inside or outside your own field.</p>
                                    </div>
                                </div>
                            </div>
                        </div> -->




                    </div>
                </div>
            </div>
            <!-- Footer -->
            <footer class=" text-center ">
                <!-- Grid container -->
                <div class="container p-4 " style="border-top: 1px solid;">
                    <!-- Section: Social media -->
                    <section class="mb-4">
                        <a class="btn btn-outline-dark btn-floating m-1" href="#!" role="button">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="btn btn-outline-dark btn-floating m-1" href="#!" role="button">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a class="btn btn-outline-dark btn-floating m-1" href="#!" role="button">
                            <i class="fab fa-google"></i>
                        </a>
                        <a class="btn btn-outline-dark btn-floating m-1" href="#!" role="button">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </section>
                    <!-- Section: Social media -->

                    <section class="mb-4">
                        <h6>
                            Feel free to reach out to us with any questions, concerns, or feedback. We value your input and strive to provide the best learning experience possible.
                        </h6>
                    </section>

                </div>
            </footer>
            <!-- Footer -->
            <!-- Button trigger modal -->
            <button type="button" id="showTestAnnouce" hidden data-bs-toggle="modal" data-bs-target="#TestModal">
            </button>

            <!-- Modal Show test annoucement -->
            <div class="modal fade" id="TestModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">

                            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <h5>You need to start a test to determine the appropriate level for yourself.</h5>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-outline-success ellipse-btn" onclick="NavToTestPage()" btn>Start the test</button>
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" id="showSignInAnnouce" hidden data-bs-toggle="modal" data-bs-target="#signInModal">
            </button>

            <!-- Modal Show sign in annoucement -->

            <div class="modal fade" id="signInModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">

                            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <h5>You need to sign in first!</h5>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-outline-success ellipse-btn" onclick="NavToSignIn()" btn>Start the test</button>
                        </div>
                    </div>
                </div>
            </div>



            <script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
            <script src="~/Plugins/js/index.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
                    crossorigin="anonymous"></script>

        </body>

    </html>
