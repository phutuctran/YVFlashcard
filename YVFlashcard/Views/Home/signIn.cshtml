@{
    ViewBag.Title = "signIn";
    Layout = null;
 }

<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link href="~/Plugins/css/style.css" rel="stylesheet">
    <link href="~/Plugins/css/authentication.css" rel="stylesheet">
    <link href="~/Plugins/fonts/fontawesome-free-6.4.2-web/css/all.min.css" rel="stylesheet">
</head>

<body>

    <section class="vh-100" id="sign_in-section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6" style="padding-left:200px; padding-top: 70px; background-color:#FFFFFF;">

                    <div class="px-5 ms-xl-4">
                        <img src="~/Plugins/localImgs/logo.png" style="height: 100px;  padding-left: 60px;">

                    </div>

                    <div class="d-flex align-items-center ">

                        <form style="width: 23rem;" id="Sign_in-for">

                            <h1 class="fw-normal mb-3 pb-3" id="sign_in-title">Sign In</h1>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="userName_SignIn">User name</label>
                                <input type="text" id="userName_SignIn" class="form-control form-control-lg" />

                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="pass_SignIn">Password</label>
                                <input type="password" id="pass_SignIn" class="form-control form-control-lg" />

                            </div>

                            <div class="pt-1 mb-4 align-items-center">
                                <button type="button" class="btn btn-outline-success ellipse-btn" id="sign_in-btn" onclick="checkAccount()">SIGN IN</button>
                            </div>

                            <p class="small mb-5 pb-lg-2" style="padding-left:30%;"><a class="text-muted" href="#!">Forgot password?</a></p>
                            <p style="text-align: center;">Don't have an account? <a href="@Url.Action("signUp", "Home" )" class="link">Sign Up here</a></p>

                        </form>

                    </div>
                </div>
                <div class="col-sm-6 " style="padding-left: 100px;">
                    <img src="~/Plugins/localImgs/SignIn_background.png"
                         alt="Login image" style="object-fit:fill ; object-position: left; width: 650px;  height:850px; margin-top: 20px;">
                </div>
            </div>
        </div>
    </section>


    <script src="~/Plugins/js/authentication.js"></script>
    <script src="~/Scripts/popper.min.js"
            integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
    </script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
            integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
    </script>
</body>

</html>