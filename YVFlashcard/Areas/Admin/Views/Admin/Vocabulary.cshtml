    </div>
</div>

<!-- Modal Edit-->
<div class="modal fade  " id="themeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="themeModalLabel">Modal title</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label>Image</label><br />
                <div>
                    <img id="modalImg" src="" width="100px" height="100px" /><br />
                    <input id="inpImage" type="hidden" name="Image" value="" />
                </div>
                <button type="button"  class="btn btn-success btn-sm" onclick="loadImage()">Upload</button><br />


                <label>Name</label><br />
                <input id="modalName" type="text" /> <br />

                <label>Description</label><br />
                <input id="modalDes" type="text" width="200px" /> <br />


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveEdit()">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- ---------------------Modal Create------------------------- -->

<div class="modal fade  " id="createTheme" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="themeModalLabel">Modal title</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label>Image</label><br />
                <div>
                    <img id="createImg" width="100px" height="100px" /><br />
                    <input id="inpImageCreate" type="hidden" name="Image" value="" />
                </div>
                <button type="button" id="button-upload" class="btn btn-success btn-sm" onclick="loadCreateImage()">Upload</button><br />


                <label>Name</label><br />
                <input id="createName" type="text" /> <br />

                <label>Description</label><br />
                <input id="createDes" type="text" width="200px" /> <br />


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="addRow()">ADD</button>
            </div>
        </div>
    </div>
</div>

