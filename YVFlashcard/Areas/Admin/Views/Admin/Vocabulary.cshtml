<div class="main-content">

    <div class="sub-header mt-4 ms-5 d-flex">

        <div class="dropdown me-5">
            <button class="btn btn-primary dropdown-toggle btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Vocabulary Word Lists
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" onclick=" cefrHandle()">CEFR Levels</a></li>
                <li><a class="dropdown-item" onclick="specialVocabHandle()">Specialised Vocabulary</a></li>
                <li><a class="dropdown-item" onclick="idiomHandle()">Idioms</a></li>
            </ul>
        </div>

        <div class="input-group md-form form-sm form-1 pl-0">
            <div class="input-group-prepend">
                <span class="input-group-text " style="background-color: #009CFF;" id="basic-text1">
                    <i class="fas fa-search text-white"
                       aria-hidden="true"></i>
                </span>
            </div>
            <input class=" my-0 py-0 " style="border: 1px grey solid; width: 600px; height: 30px;" type="text" placeholder="Search" aria-label="Search">
        </div>

        <button class="btn btn-primary  me-5" style="height: 30px; width: 180px;" data-bs-toggle="modal" data-bs-target="#createTheme"><i class="fa-solid fa-plus"></i> Add Theme</button>

    </div>

    <!-- Recent Sales Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h6 class="mb-0" id="theme-infor">Theme Information</h6>

            </div>
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-dark">
                            <th scope="col" style="width: 30px;">No</th>
                            <th scope="col" style="width: 90px;">Image</th>
                            <th scope="col" style="width:150px;">Name</th>
                            <th scope="col">Description</th>
